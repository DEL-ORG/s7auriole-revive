pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'maven3'
    }

    stages {
        stage("Cleanup Workspace") {
            steps {
           // cleanWs()  if not work try this 
              deleteDir()
            }
        }

        stage("Checkout from SCM") {
            steps {
                script {
                    // Check out the repository and switch to the desired branch
                    checkout([$class: 'GitSCM', branches: [[name: '*/revive-code']], userRemoteConfigs: [[url: 'https://github.com/DEL-ORG/s7auriole-revive.git']]])
                    // or  git branch: 'revive-code', credentialsId: 'github', url: 'https://github.com/DEL-ORG/s7auriole-revive.git'
                }
            }
        }

        stage("Build Application") {
            steps {
                script {
                    // Navigate to the correct directory and run Maven build
                    dir('ui') {
                        sh 'mvn clean package'
                    }
                }
            }
        }

        stage("Test Application") {
            steps {
                script {
                    // Navigate to the correct directory and run Maven tests
                    dir('ui') {
                        sh 'mvn test'
                    }
                }
            }
        }
        stage("SonarQube Analysis"){
            steps {
                script{
                    dir('ui'){
                    withSonarQubeEnv(credentialsId: 'sonarqube') {
                         sh "mvn clean verify sonar:sonar"

                         }
                    }
                }
            }
        }
    }
}


