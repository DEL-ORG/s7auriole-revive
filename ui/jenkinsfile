pipeline {
    agent any
    tools {
        jdk 'Java17'
        maven 'Maven3'
    }
          }
    stages{
        stage("Cleanup Workspace"){
                steps {
                cleanWs()
                }
        }

        stage("Checkout from SCM"){
                steps {
                    git branch: 'revive-code', credentialsId: 'github', url: 'git@github.com:DEL-ORG/s7auriole-revive.git'
                    sh "cd ui"
                }
        }

        stage("Build Application"){
            steps {
                sh "mvn clean package" //means install the package
            }

       }

       stage("Test Application"){
           steps {
                 sh "mvn test"
           }
       }
    }
